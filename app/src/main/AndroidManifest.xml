<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rsc.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FavoritosActivity"
            android:label="@string/title_activity_favoritos"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ContactoActivity"
            android:label="@string/title_activity_contacto"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AcercaDeActivity"
            android:label="@string/title_activity_acerca_de"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ConfigCuentaActivity"
            android:label="@string/title_activity_config_cuenta"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rsc.myapplication.activities.MainActivity" />
        </activity>

        <service android:name=".servicios.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".Broadcasters.VerMiPerfil">
            <intent-filter>
                <action android:name="VER_MI_PERFIL" />
            </intent-filter>
        </receiver>
        <receiver android:name=".Broadcasters.DarFollowUnfollow">
            <intent-filter>
                <action android:name="DAR_FOLLOW" />
            </intent-filter>
        </receiver>
        <receiver android:name=".Broadcasters.VerUsuario">
            <intent-filter>
                <action android:name="VER_USUARIO" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.PerfilUsuarioActivity"
            android:label="@string/title_activity_perfil_usuario"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rsc.myapplication.activities.MainActivity" />
        </activity>
    </application>

</manifest>
